generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Blog {
  id             String   @id @default(cuid())
  mainTitle      String
  category       String
  imageUrl       String
  paragraphs     String[]
  secondaryTitle String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  read      Boolean  @default(false)
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}
